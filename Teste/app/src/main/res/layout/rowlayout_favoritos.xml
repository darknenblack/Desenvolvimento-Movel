<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="12dp"
    android:outlineAmbientShadowColor="#FFF"
    card_view:cardBackgroundColor="#182930"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp">

    <RelativeLayout
        android:id="@+id/layoutFavoritos"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image2bookmark"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            card_view:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/desc2bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nome2bookmark"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/image2bookmark"
            android:ellipsize="end"
            android:maxWidth="190dp"
            android:maxLines="1"
            android:text="Type, alcohol"
            android:textColor="#AAAAAA"
            android:textSize="15dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/nome2bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/image2bookmark"
            android:ellipsize="end"
            android:maxWidth="120dp"
            android:maxLines="1"
            android:text="Drink"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc2bookmark"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="0dp"
            android:layout_toRightOf="@id/image2bookmark"
            android:ellipsize="end"
            android:maxWidth="190dp"
            android:maxLines="1"
            android:text="#MisturaÃª #BoraBeber #Compartilha"
            android:textColor="#555"
            android:textSize="14dp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/ivFavCardHome_favScreen"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_baseline_favorite_24" />

        <ImageView
            android:id="@+id/ivShareCardHome_favScreen"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@id/ivFavCardHome_favScreen"
            android:src="@drawable/ic_baseline_share_24" />

        <!--<TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="15sp" />-->

    </RelativeLayout>
</androidx.cardview.widget.CardView>