<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:outlineAmbientShadowColor="#FFF"
    card_view:cardBackgroundColor="#182930"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivImageCardHome"
            android:layout_width="255dp"
            android:layout_height="230dp"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            card_view:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tvNameCardHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivImageCardHome"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxWidth="160dp"
            android:maxLines="1"
            android:text="Drink"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvTypeCardHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNameCardHome"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Type, alcohol"
            android:textColor="#AAAAAA"
            android:textSize="16dp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/ivFavCardHome"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/ivImageCardHome"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/ic_baseline_favorite_border_24" />

        <ImageView
            android:id="@+id/ivShareCardHome"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/ivImageCardHome"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/ivFavCardHome"
            android:src="@drawable/ic_baseline_share_24" />

        <!--<TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="15sp" />-->

    </RelativeLayout>
</androidx.cardview.widget.CardView>